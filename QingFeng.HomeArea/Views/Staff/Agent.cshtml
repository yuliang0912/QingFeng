
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAgentV2.cshtml";
    var userInfo = ViewBag.User as QingFeng.Models.UserInfo ?? new QingFeng.Models.UserInfo();
}
@using QingFeng.Common
@using QingFeng.Common.Extensions
@model List<QingFeng.Models.UserInfo>

<style type="text/css">
    .pagination .active {
        color: black;
    }
</style>

<div class="page-header">
    <h1 class="form-inline">
        代理商列表
        @if (userInfo.UserSubMenus.ContainsKey(AgentEnums.SubMenuEnum.添加代理商))
        {
            <a href="http://www.tonyzu.com/staff/addAgent" class="btn btn-info btn-sm pull-right add-modal addStaff"> <i class="glyphicon glyphicon-plus"></i> 添加代理商</a>
        }
    </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="list-data-head">
                <th>用户名</th>
                <th>姓名</th>
                <th>电话</th>
                <th>邮箱</th>
                <th>上次登录时间</th>
                <th>上次登录IP</th>
                <th>创建时间</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr align="center">
                    <td>@item.UserName</td>
                    <td>@item.NickName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@(item.LastLoginDate.Year == 2000 ? "-" : item.LastLoginDate.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                    <td>@(item.LastLoginIp)</td>
                    <td>@item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <span class="label @(item.Status == 0 ? "label-success" : "label-warning")">@(item.Status == 0 ? "正常" : "禁止登陆")</span>
                    </td>
                    <td>
                        @if (userInfo.UserSubMenus.ContainsKey(AgentEnums.SubMenuEnum.编辑代理商))
                        {
                            <a href="http://www.tonyzu.com/staff/editAgent?userId=@(item.UserId)" class="setting">编辑</a>
                        }
                        @if (userInfo.UserSubMenus.ContainsKey(AgentEnums.SubMenuEnum.重置代理商密码))
                        {
                            <a href="http://www.tonyzu.com/staff/reSetAgentPwd?userId=@(item.UserId)" data-toggle="modal" class="change-modal">重置密码</a>
                        }
                        @if (userInfo.UserSubMenus.ContainsKey(AgentEnums.SubMenuEnum.删除代理商))
                        {
                            if (item.Status == 0)
                            {
                                <a href="http://www.tonyzu.com/staff/ProhibitLogin?userId=@(item.UserId)" title="" class="red delete-modal" data-goods-id="71" data-name="@item.NickName" data-trigger="focus" data-placement="left" tabindex="0" role="button" data-title="禁止登录状态" data-original-title="禁止登录">禁止登录</a>
                            }
                            else
                            {
                                <a href="http://www.tonyzu.com/staff/AllowLogin?userId=@(item.UserId)" title="" class="green delete-modal" data-goods-id="70" data-name="@item.NickName" data-trigger="focus" data-placement="left" tabindex="0" role="button" data-title="允许登录状态" data-original-title="允许登录">允许登录</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.etopConfirm();

        $.showModal({ selector: '.change-modal' });
        $.showModal({
            selector: '.setting',
            formId: 'setting-form',
            beforeSubmit: function (formData, jqForm, options) {
                var userId = jqForm.find("#userId").val();
                if (!userId) {
                    var pwd1 = jqForm.find("#passWord").val();
                    var pwd2 = jqForm.find("#confirmPassWord").val();
                    if (!userId && pwd1.length < 6) {
                        layer.msg("请输入最少6位长度的密码");
                        return false;
                    }
                    if (pwd1.length > 0 && pwd1.length < 6) {
                        layer.msg("请输入最少6位长度的密码");
                        return false;
                    }
                    if (pwd1 !== pwd2) {
                        layer.msg("两次密码不一致");
                        return false;
                    }
                }
                return true;
            },
            success: function (response, status) {
                if (response.data === 1) {
                    layer.msg("操作成功");
                    $('#etop-modal').modal('hide');
                    $.pageReload();
                }
                else {
                    layer.msg("操作失败");
                }
                return false;
            }
        });

        $.showModal({
            selector: '.addStaff',
            formId: 'setting-form',
            beforeSubmit: function (formData, jqForm, options) {
                var pwd1 = jqForm.find("#passWord").val();
                var pwd2 = jqForm.find("#confirmPassWord").val();
                if (pwd1 !== pwd2) {
                    layer.msg("两次密码不一致");
                    return false;
                }
                var userName = jqForm.find("#userName").val();
                if (userName.length < 6) {
                    layer.msg("请输入6位以上长度的用户名");
                    return false;
                }
                if (pwd1.length < 6) {
                    layer.msg("请输入6位以上长度的密码");
                    return false;
                }
                return true;
            },
            success: function (response, status) {
                if (response.data === 1) {
                    layer.msg("添加成功");
                    $('#etop-modal').modal('hide');
                    $.pageReload();
                }
                else if (response.data === 2) {
                    layer.msg("用户名已存在");
                } else {
                    layer.msg("添加失败");
                }
                return false;
            }
        });

        $('#staff-search').click(function () {
            var keyword = $('#staff_keyword').val();
            var url = "http://www.tonyzu.com/staff/index" + '?keywords=' + keyword;
            $.getPageContent({ url: url });
            return false;
        });

        $('.pagination a').click(function () {
            var url = $(this).attr('href');
            $.getPageContent({ url: url });
            return false;
        });
    });
</script>
