
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAgentV2.cshtml";
}
@model List<QingFeng.Models.UserInfo>

<style type="text/css">
    .pagination .active{color: black}
</style>

<div class="page-header">
    <h1 class="form-inline">
        代理商列表
        <a href="http://www.qingfeng.com/staff/addAgent" class="btn btn-info btn-sm pull-right add-modal"> <i class="glyphicon glyphicon-plus"></i> 添加代理商</a>
    </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="list-data-head">
                <th>用户名</th>
                <th>姓名</th>
                <th>电话</th>
                <th>邮箱</th>
                <th>上次登录时间</th>
                <th>上次登录IP</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr align="center">
                    <td>@item.UserName</td>
                    <td>@item.NickName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@(item.LastLoginDate.Year == 2000 ? "-" : item.LastLoginDate.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                    <td>@(item.LastLoginIp)</td>
                    <td>
                        <span class="label @(item.Status == 0 ? "label-success" : "label-warning")">@(item.Status == 0 ? "正常" : "禁止登陆")</span>
                    </td>
                    <td>
                        <a href="http://www.qingfeng.com/staff/edit?userId=@(item.UserId)" class="setting">编辑</a>&nbsp;&nbsp;
                        <a href="http://www.findshoes.cn/staff/changepwd?userId=@(item.UserId)" data-toggle="modal" target="#editMenu2" class="change-modal">重置密码</a>&nbsp;&nbsp;
                        @if (item.Status == 0)
                        {
                            <a href="http://www.findshoes.cn/staff/ProhibitLogin?userId=@(item.UserId)" title="" class="red delete-modal" data-goods-id="71" data-name="F22" data-trigger="focus" data-placement="left" tabindex="0" role="button" data-title="禁止代理商登录" data-original-title="禁止登录">禁止登录</a>
                        }
                        else
                        {
                            <a href="http://www.findshoes.cn/staff/AllowLogin?userId=@(item.UserId)" title="" class="green delete-modal" data-goods-id="70" data-name="取消123" data-trigger="focus" data-placement="left" tabindex="0" role="button" data-title="允许代理商登录" data-original-title="允许登录">允许登录</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal inmodal" id="editMenu2" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">关闭</span></button>
                <h5 class="modal-title">重置密码</h5>
            </div>
            <div class="modal-body">
                <form class="form-horizontal m-t" id="signupForm">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">输入新密码 <i>*</i>：</label>
                        <div class="col-sm-5">
                            <input name="passWord" id="passWord" maxlength="30" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-3">
                            <button class="btn btn-primary" id="updatePwd" type="button">保存</button>
                            <button class="btn btn-primary" id="closeModal" type="button">关闭</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $.etopConfirm();
        $.showModal({
            formId: 'user-form',
            beforeSubmit: function (formData, jqForm, options) {
                var l = formData.length;
                for (var i = 0; i < l; i++) {
                    if (formData[i].value == '') {
                        if (formData[i].name == 'username' || formData[i].name == 'password' || formData[i].name == 'password_confirm') {
                            $('#' + formData[i].name).parents('.form-group').addClass('has-error');
                            return false;
                        }
                        else {
                            $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                        }
                    }
                    else {
                        $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                    }
                }
                return true;
            },
            success: function (response, status) {
                if (response.error == 0) {
                    $('#etop-modal').modal('hide');
                    $('#etop-modal').on('hidden.bs.modal', function (e) {
                        $.pageReload();
                    });
                }
                else {
                    if (response.error == 9) {
                        var data = response.data;
                        var msg = '';
                        for (key in data) {
                            msg += data[key] + '\r\n';
                        }
                        alert(msg);
                    }
                    else {
                        alert(response.msg);
                    }
                }

                return false;
            },
        });
        $.showModal({
            formId: 'set-user-form',
            beforeSubmit: function (formData, jqForm, options) {
                var l = formData.length;
                for (var i = 0; i < l; i++) {
                    if (formData[i].value == '') {
                        $('#' + formData[i].name).parents('.form-group').addClass('has-error');
                        return false;
                    }
                    else {
                        $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                    }
                }
                return true;
            },
            success: function (response, status) {
                if (response.error == 0) {
                    $('#etop-modal').modal('hide');
                    $.pageReload();
                    return false;
                }
                else {
                    if (response.error == 9) {
                        var data = response.data;
                        var msg = '';
                        for (key in data) {
                            msg += data[key] + '\r\n';
                        }
                        alert(msg);
                    }
                    else {
                        alert(response.msg);
                    }
                }
                return false;
            },
            selector: '.change-modal'
        });

    })
</script>
