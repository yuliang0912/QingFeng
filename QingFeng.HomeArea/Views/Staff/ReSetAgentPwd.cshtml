
@{
    ViewBag.Title = "ReSetAgentPwd";
    Layout = "~/Views/Shared/_LayoutAgentV2.cshtml";
}
@model QingFeng.Models.UserInfo
<div class="modal-dialog">
    <div class="modal-content animated bounceInRight">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">关闭</span></button>
            <h5 class="modal-title">重置密码</h5>
        </div>
        <div class="modal-body">
            <form class="form-horizontal m-t" id="signupForm">
                <div class="form-group">
                    <label class="col-sm-3 control-label">输入新密码 <i style="color:red">*</i>：</label>
                    <div class="col-sm-5">
                        <input name="passWord" id="passWord" maxlength="30" class="form-control" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-sm-offset-3">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                        <button class="btn btn-primary" id="updatePwd" type="button">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $("#updatePwd").click(function() {
        var passWord = $("#passWord").val();
        if (passWord.length < 6) {
            layer.msg("请输入最少6位长度的新密码");
            return;
        }
        $.ajax({
            type: "post",
            url: "/staff/reSetAgentPwd",
            data: { passWord: passWord, userId: @(Model.UserId) },
            success: function(result) {
                if (result.data === 1) {
                    layer.msg("新密码设置成功");
                    $("#etop-modal").modal("hide");
                } else if (data === 0) {
                    layer.msg("修改失败");
                } else {
                    layer.msg(result.msg);
                }
            },
            error: function() {
                layer.msg("请求数据失败.");
            }
        });
    });
</script>
