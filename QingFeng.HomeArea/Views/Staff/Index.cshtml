
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAgentV2.cshtml";
}
@model List<QingFeng.Models.UserInfo>
<style type="text/css">
    .red {
        color: red;
    }
    .green {
        color: green;
    }
</style>
<div class="page-header">
    <h1 class="form-inline">
        员工管理：
        <small>
            <i class="icon-search"></i>
            <div class="form-group">
                <label class="sr-only" for="staff_keyword">关键字</label>
                <input type="text" name="staff_keyword" id="staff_keyword" value="@(ViewBag.keyWords)" style="width: 160px;" class="form-control input-sm" placeholder="请输入员工姓名">
            </div>
            <button type="button" class="btn btn-primary btn-sm " id="staff-search">搜索</button>
        </small>
        <a href="http://www.qingfeng.com/staff/add" class="btn btn-info btn-sm pull-right add-modal addStaff"> <i class="glyphicon glyphicon-plus"></i> 添加员工</a>
    </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>姓名</th>
            <th>邮箱</th>
            <th>手机</th>
            <th>上次登录时间</th>
            <th>上次登录IP</th>
            <th>创建时间</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr align="center">
                <td>@item.NickName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.LastLoginDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.LastLoginIp</td>
                <td>@item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <span class="label @(item.Status == 0 ? "label-success" : "label-warning")">@(item.Status == 0 ? "正常" : "关闭")</span>
                </td>
                <td>
                    <a href="http://www.qingfeng.com/staff/setrole/39" class="setting">设置权限</a>
                    <a href="http://www.qingfeng.com/staff/edit?userId=@(item.UserId)" class="setting">编辑员工</a>
                    <a href="http://www.qingfeng.com/staff/ProhibitLogin?userId=@(item.UserId)" title="" class="red delete-modal" data-goods-id="@item.UserId" data-name="@item.NickName" data-trigger="focus" data-placement="left" tabindex="0" role="button" data-title="禁止员工登录" data-original-title="禁止登录">禁止登录</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- 删除框 -->
<div class="modal small fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">删除员工</h3>
            </div>
            <div class="modal-body">
                <p class="error-text"><i class="fa fa-warning modal-icon"></i></p><div id="deltitle"></div><br><p></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">取消</button>
                <button class="btn btn-danger gb" data-dismiss="modal">确认</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.etopConfirm();
        $.showModal({
            formId: 'user-form',
            beforeSubmit: function (formData, jqForm, options) {
                var l = formData.length;
                for (var i = 0; i < l; i++) {
                    if (formData[i].value == '') {
                        if (formData[i].name == 'username' || formData[i].name == 'password' || formData[i].name == 'password_confirm') {
                            $('#' + formData[i].name).parents('.form-group').addClass('has-error');
                            return false;
                        }
                        else {
                            $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                        }
                    }
                    else {
                        $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                    }
                }
                return true;
            },
            success: function (response, status) {
                if (response.error == 0) {
                    $('#etop-modal').modal('hide');
                    $('#etop-modal').on('hidden.bs.modal', function (e) {
                        $.pageReload();
                    });
                }
                else {
                    if (response.error == 9) {
                        var data = response.data;
                        var msg = '';
                        for (key in data) {
                            msg += data[key] + '\r\n';
                        }
                        alert(msg);
                    }
                    else {
                        alert(response.msg);
                    }
                }

                return false;
            },
        });
        
        $.showModal({
            selector: '.addStaff',
            formId: 'setting-form',
            beforeSubmit: function (formData, jqForm, options) {
                var pwd1= jqForm.find("#passWord").val();
                var pwd2 = jqForm.find("#confirmPassWord").val();
                if (pwd1 !== pwd2) {
                    layer.msg("两次密码不一致");
                    return false;
                }
                var userName = jqForm.find("#userName").val();
                if (userName.length < 6) {
                    layer.msg("请输入6位以上长度的用户名");
                    return false;
                }
                if (pwd1.length<6) {
                    layer.msg("请输入6位以上长度的密码");
                    return false;
                }
                return true;
            },
            success: function(response, status) {
                if (response.data === 1) {
                    layer.msg("添加成功");
                    $('#etop-modal').modal('hide');
                    $.pageReload();
                }
                else if (response.data === 2) {
                    layer.msg("登录名已存在");
                } else {
                    layer.msg("添加失败");
                }
                return false;
            }
        });

        $('#staff-search').click(function () {
            var keyword = $('#staff_keyword').val();
            var url = "http://www.qingfeng.com/staff/index" + '?keywords=' + keyword;
            $.getPageContent({ url: url });
            return false;
        });

        $('.pagination a').click(function () {
            var url = $(this).attr('href');
            $.getPageContent({ url: url });
            return false;
        });
    });
</script>
