@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Micro-ERP 统一认证系统</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap -->
    <link href="/contentV2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/contentV2/css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
        .login-panel {
            width: 600px;
            margin: 80px auto;
            border: 1px solid #ddd;
        }

        h1 {
            font-family: Microsoft YaHei, "微软雅黑", simsun, "宋体", Arial;
            line-height: 68px;
            font-weight: bold;
            font-size: 28px;
            border-bottom: 1px solid #f1f1f1;
            width: 598px;
        }
    </style>
</head>
<body>
    <div class="login-panel">
        <h1 class="text-center">统一认证</h1>
        @if (ViewBag.message != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="width: 570px; margin: 10px auto;">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                @ViewBag.message
            </div>
        }
        <form class="form-horizontal" role="form" id="login-form" method="post" action="http://www.qingfeng.com/home/checkLogin">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">帐号:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="username" id="username" placeholder="请输入帐号" check-type="required" required-message="">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">密码:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" name="password" id="password" placeholder="请输入密码" check-type="required" required-message="">
                </div>
            </div>
            <div class="form-group">
                <label for="captcha" class="col-sm-2 control-label">验证码:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="captcha" id="captcha" placeholder="请输入验证码" check-type="required" required-message="">
                </div>
                <div class="col-sm-2"><img src="http://www.qingfeng.com/captcha?aid=login&@(DateTime.Now.Millisecond)" style="cursor:pointer;" onclick="javascript: this.src = '/captcha?aid=login&' + new Date().getTime();"></div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info btn-lg">登录</button>
                </div>
            </div>
        </form>
    </div>
    <script type="text/javascript" src="/contentV2/js/jquery.min.js"></script>
    <script src="/contentV2/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#login-form').submit(function () {
                var hasError = true;
                $('input').each(function (index, elem) {
                    if ($(elem).val() === '') {
                        $(elem).parents('.form-group').addClass('has-error');
                        hasError = false;
                    }
                    else {
                        $(elem).parents('.form-group').removeClass('has-error').addClass('has-success');
                    }
                });
                return hasError;
            });
        })
    </script>
</body>
</html>